@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full text-sm md:text-base lg:text-base xl:text-base 2xl:text-lg;
}

/* Reia theme */
@font-face {
	font-family: 'Poppins', sans-serif;
	font-display: auto;
}

.dark a:not(.un-a):hover {
	@apply text-tertiary-300/50;
}

.dark a:not(.un-a):active {
	@apply text-primary-500/50;
}
